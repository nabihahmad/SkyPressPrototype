<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:background="@color/colorAccent"
	app:layout_behavior="@string/appbar_scrolling_view_behavior"
	tools:showIn="@layout/app_bar_main"
	tools:context=".MainActivity">

	<FrameLayout
		android:id="@+id/latest_news_layout"
		android:layout_width="fill_parent"
		android:layoutDirection="rtl"
		android:layout_height="wrap_content">
		<ImageView
			android:id="@+id/latest_news_ImageView"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"/>
		<TextView
			android:id="@+id/latest_news_TextView"
			android:layout_gravity="bottom"
			android:textSize="20dp"
			android:textColor="@android:color/white"
			android:background="@color/blackOpacity"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"/>
	</FrameLayout>

	<TextView
		android:id="@+id/news_title"
		android:layout_below="@+id/latest_news_layout"
		android:textSize="10pt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/news_title"/>

	<ListView
		android:id="@+id/news_listing"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="5pt"
		android:layout_below="@+id/news_title">
	</ListView>

</RelativeLayout>